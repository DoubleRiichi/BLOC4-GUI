<Window xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Bloc4_GUI.ViewModels" 
             x:DataType="viewModels:SecretLoginViewModel"
             x:Class="Bloc4_GUI.Views.SecretLoginView"
             Title="Login secret :)"
             Width="300"
             Height="100">

    <StackPanel     Margin="5,5"
                    Orientation="Horizontal" Spacing="12"
                    HorizontalAlignment="Center">

            <TextBox Width="130" Height="30" PasswordChar="*" Text="{Binding InputPassword, Mode=TwoWay}" Watermark="Mot de passe" AcceptsReturn="False"/>
        
               
            <Button Content="Connexion" Command="{Binding LoginCommand}"/>

    </StackPanel>

</Window>