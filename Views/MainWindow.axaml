<Window xmlns="https://github.com/avaloniaui"
        xmlns:rxui="http://reactiveui.net"
        xmlns:app="clr-namespace:Bloc4_GUI"
        xmlns:viewModels="clr-namespace:Bloc4_GUI.ViewModels" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Bloc4_GUI.Views.MainWindow"
        x:DataType="viewModels:MainWindowViewModel"
        Title="Workers Indexer">

    <Window.KeyBindings>
        <KeyBinding Gesture="Alt+X" Command="{Binding OpenSecretCommand}">
        </KeyBinding>
    </Window.KeyBindings>

    <Grid ColumnDefinitions="10*, 1*, 89*" 
          ShowGridLines="True">
        <!-- <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions> -->

    
        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="15">
            <StackPanel.Styles>
                <Style Selector="StackPanel > :is(Control)">
                    <Setter Property="Margin" Value="2"/>
                </Style>
                <Style Selector="StackPanel > TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </StackPanel.Styles>


            <Button Content="SalariÃ©s" Command="{Binding VisitSalarie}" />
            <Button Content="Services" Command="{Binding VisitService}" />
            <Button Content="Sites" Command="{Binding VisitSite}" />

        </StackPanel>

        <GridSplitter Grid.Column="1" ResizeDirection="Columns"/>



        <rxui:RoutedViewHost Grid.Column="2" Router="{Binding Router}">
            <rxui:RoutedViewHost.DefaultContent>
                <TextBlock Text="Default content"
                           VerticalAlignment="Center"
                            HorizontalAlignment="Center" />
                           
            </rxui:RoutedViewHost.DefaultContent>
            <rxui:RoutedViewHost.ViewLocator>
                <!-- See AppViewLocator.cs section below -->
                <app:AppViewLocator />
            </rxui:RoutedViewHost.ViewLocator>
        </rxui:RoutedViewHost>


    </Grid>
</Window>