<Window xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Bloc4_GUI.ViewModels" 
             x:DataType="viewModels:AddSiteViewModel"
             x:Class="Bloc4_GUI.Views.AddSiteView"
             Title="Ajouter un Service"
             Width="300"
             Height="100">

    <StackPanel     Margin="5,5"
                    Orientation="Horizontal" Spacing="12"
                    HorizontalAlignment="Center">

            <TextBox Width="130" Height="30" Text="{Binding InputSite, Mode=TwoWay}" Watermark="Nom" AcceptsReturn="False"/>
        
               
            <Button Content="Valider" Command="{Binding CreateSiteCommand}"/>

    </StackPanel>

</Window>